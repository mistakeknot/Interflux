    },
    {
      "feature": "Knowledge compounding and retrieval",
      "requires": "interknow"
    },
    {
      "feature": "Phase tracking on review completion",
      "requires": "interphase"
    },
    {
      "feature": "Sprint gate enforcement for shipping",
      "requires": "intercore"
    },
    {
      "feature": "Bead-linked review findings",
      "requires": "beads"
    },
    {
      "feature": "Auto-review on doc drift detection",
      "requires": "interwatch"
    }
  ],
  "companions": {
    "recommended": [
      "interwatch",
      "intersynth",
      "intersense",
      "interknow"
    ],
    "optional": [
      "interphase",
      "interstat"
    ]
  }
